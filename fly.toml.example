# Fly.io Configuration Example
# Copy this to fly.toml and customize

app = "stratejiplus"
primary_region = "iad"  # Change to your preferred region (iad, ord, fra, etc.)

[build]
  builder = "paketobuildpacks/builder:base"
  # Or use Dockerfile:
  # dockerfile = "Dockerfile"

[env]
  PORT = "8080"
  NODE_ENV = "production"

# HTTP Service
[[services]]
  internal_port = 8080
  protocol = "tcp"
  processes = ["app"]

  [[services.ports]]
    port = 80
    handlers = ["http"]
    force_https = true

  [[services.ports]]
    port = 443
    handlers = ["tls", "http"]

  [services.concurrency]
    type = "connections"
    hard_limit = 25
    soft_limit = 20

  # Health check
  [[services.http_checks]]
    interval = "10s"
    timeout = "2s"
    grace_period = "5s"
    method = "GET"
    path = "/health"

# Scaling (optional)
# [scale]
#   memory = "256mb"
#   cpu_kind = "shared"
#   cpu_count = 1

# Secrets are set via: fly secrets set KEY=value
# They're automatically available as environment variables

